@using PricePlanCalculator.Helpers
@using PricePlanCalculator.Models.Plans
@model PricePlanCalculator.ViewModels.PriceCalculationViewModel
@{
    ViewBag.Title = "Home Page";
}
@section scripts
{
    <script src="@Url.Content("~/Scripts/index.js")" type="text/javascript"></script>
}
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title</h1>
				<h2>@ViewBag.Message</h2>
                <p>Voice plan 1:  @StandardPlans.VoicePlan1</p>
                <p>Voice plan 2:  @StandardPlans.VoicePlan2</p>
                <p>Text plan 1:  @StandardPlans.TextPlan1</p>
                <p>Text plan 2:  @StandardPlans.TextPlan2</p>
            </hgroup>
            <p>
				Calculate the cost of a call.
                
                @using (Html.BeginForm("CalculateCall", "Home"))
                {
                    @Html.LabelFor(x=>x.CallType)
                    @Html.EnumDropDownListFor(x => x.CallType)
                    @Html.LabelFor(x => x.Units)
                    @Html.EditorFor(x => x.Units)
                    <input type="submit" value="Calculate" />
                }
			</p>
        </div>
    </section>
}
<h3>
    Result:</h3>
<div id="result">
</div>