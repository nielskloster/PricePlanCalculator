@using PricePlanCalculator.Helpers
@using PricePlanCalculator.Models.Plans
@model PricePlanCalculator.ViewModels.PriceCalculationViewModel
@{
    ViewBag.Title = "Price Plan Calculator";
}
@section scripts
{
    <script src="@Url.Content("~/Scripts/index.js")" type="text/javascript"></script>
}
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
				<h1>Calculate the cost of a call</h1>
                <p>Available plans:</p>
                <ul>
                @foreach(var plan in StandardPlans.AllPlans)
				{
					<li>@plan</li>
				}  
                </ul>
			</hgroup>
            <p>
                @using (Html.BeginForm("CalculateCall", "Home"))
                {
                   <span>Plan:</span>
                    @Html.EnumDropDownListFor(x => x.PlanType)
					<span>Units (Seconds/Kbytes/Messages):</span>
                    @Html.EditorFor(x => x.Units)
                    <input type="submit" value="Calculate" />
                }
			</p>
        </div>
    </section>
}
<h3>
    Result:</h3>
<div id="result">
</div>